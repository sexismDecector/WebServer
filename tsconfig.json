{
	"compilerOptions": {
		"module": "commonjs",
		"strict": true,
		"watch": true,
		"target": "es5",
		"sourceMap": true,
		"outDir": "dist/",
		"noEmitOnError": true,
		"types": [
			"reflect-metadata"
		],
		"lib": [
			"es2017"
		],
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules", "test"
	]
}